MONGO_URI=mongodb://localhost:27017/REST
PORT=8000
NODE_ENV=development

# Comma-separated list of allowed browser origins
CORS_ORIGIN=http://localhost:5174,http://localhost:5173,http://localhost:8081,http://localhost:8080
USER_CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:8080,http://localhost:8081
